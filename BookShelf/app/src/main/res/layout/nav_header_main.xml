<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp16"
    android:paddingTop="@dimen/dp24"
    android:paddingRight="@dimen/dp16"
    android:paddingBottom="@dimen/dp16"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <com.android.almufeed.ui.camera.CircleImageView
        android:id="@+id/img_profile_pic"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp18"
        android:src="@drawable/ic_profile_circle"
        app:civ_border_color="@color/circleImageBorder"
        app:civ_border_overlay="true"
        app:civ_border_width="@dimen/dp4" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/nav_user_name"
        style="@style/TextAppearance.MaterialComponents.Subtitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="@dimen/dp2"
        tools:text="Charlotte"
        android:textColor="?colorSecondary"
        android:textSize="@dimen/sp16"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/nav_user_contact"
        style="@style/TextAppearance.MaterialComponents.Body2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:text="+91-9567921958"
        android:textColor="@color/black"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/nav_user_email"
        style="@style/TextAppearance.MaterialComponents.Body2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_vertical"
        android:layout_marginHorizontal="@dimen/dp12"
        tools:text="charlotte@gmail.com"
        android:textColor="@color/black"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dp12"
        android:layout_marginBottom="@dimen/dp6"
        android:background="#E4E4E4" />

</LinearLayout>