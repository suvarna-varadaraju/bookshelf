<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@color/white"
    android:orientation="vertical"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:id="@+id/llFavContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp10"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtTaskid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task ID : TST:385"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/dp14"
            style="@style/TextAppearance.MaterialComponents.Subtitle1" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtscheduledate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp5"
            android:text="Scheduled Date: 10/12/2023 8:51 AM"
            android:textAlignment="center"
            android:textSize="@dimen/dp12"
            style="@style/TextAppearance.MaterialComponents.Body1"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtAttendDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Attend Date: 10/12/2023 8:51 AM"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="@dimen/dp12"
            style="@style/TextAppearance.MaterialComponents.Body1"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtbuilding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Building: Test Building"
            android:textColor="@color/black"
            android:textSize="@dimen/dp12"
            style="@style/TextAppearance.MaterialComponents.Body1" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtlocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Location: Test location"
                android:textColor="@color/black"
                android:textSize="@dimen/dp12"
                style="@style/TextAppearance.MaterialComponents.Body1"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/txtarrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_fwd"/>

        </RelativeLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txttype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Type: BREAKDOWN"
            android:textColor="@color/black"
            android:textSize="@dimen/dp12"
            style="@style/TextAppearance.MaterialComponents.Body1" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtpriority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Priority: Routine"
            android:textColor="@color/black"
            android:textSize="@dimen/dp12"
            style="@style/TextAppearance.MaterialComponents.Body1" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtproblem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Problem: AC not cooling(FCU)"
            android:textColor="@color/black"
            android:textSize="@dimen/dp12"
            style="@style/TextAppearance.MaterialComponents.Body1" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtcategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Category: HVAC"
            android:textColor="@color/black"
            android:textSize="@dimen/dp12"
            style="@style/TextAppearance.MaterialComponents.Body1" />

    </LinearLayout>
</androidx.cardview.widget.CardView>